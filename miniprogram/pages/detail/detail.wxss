/* miniprogram/pages/detail/detail.wxss */

.thumb {
    width: 750rpx;
    height: 500rpx;
    overflow: hidden;
    position: relative;
}

.back {
    width: 100%;
    filter: blur(15px)
}

.img {
    position: absolute;
    width: 100%;
    height: 300rpx;
    left: 0;
    top: 30rpx;
}

.book-detail {
    display: flex;
}

.book-title,
.book-press,
.book-author {
    width: 70%;
    margin-top: 10rpx;
    margin-left: 20rpx;
}

.book-rate,
.book-price,
.book-count {
    margin-top: 10rpx;
    margin-right: 20rpx;
}

.label {
    margin: 10px;
}

.book-label {
    display: inline-block;
    margin-left: 20px;
    margin-bottom: 10px;
    color: #3377aa;
    word-break: keep-all;
    white-space: nowrap;
}

.comments {
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-top: 1px solid #ddd;
}

.comments:last-child {
    border-bottom: 1px solid #ddd;
}

.comments-flex {
    margin-top: 40rpx;
    margin-bottom: 10rpx;
    display: flex;
}

.comments-author {
    width: 70%;
    color: #3377aa;
}

.comments-content {
    margin-bottom: 40rpx;
    color: #666
}

textarea {
    border: 1px solid #ddd;
    width: 100%;
    margin-bottom: 10rpx;
}

.subimt-comments {
    margin-left: 20rpx;
    margin-right: 20rpx;
}